---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "./Layout.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description="iufb portfolio website" />
  </head>
  <body
    class="w-full bg-background text-text transition-colors delay-100 mt-10"
  >
    <main
      class="relative 2xl:max-w-[1100px] xl:max-w-[1000px] lg:max-w-[900px] md:max-w-[650px] sm:max-w-[400px] max-w-[360px] w-full gap-20 mx-auto flex flex-col"
    >
      <Header />
      <slot />
    </main>
    <Footer />
  </body>
</html>
